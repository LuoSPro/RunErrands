<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_whole_white_10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_address_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="地址"
        android:textColor="@color/text_main"
        android:textColorHint="@color/text_main"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_name_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:text="联系人"
        android:textColor="@color/text_main"
        android:textColorHint="@color/text_main"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_address_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_address" />

    <TextView
        android:id="@+id/tv_phone_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="手机号"
        android:textColor="@color/text_main"
        android:textColorHint="@color/text_main"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_name_address"
        app:layout_constraintTop_toTopOf="@+id/tv_name_address" />
</androidx.constraintlayout.widget.ConstraintLayout>